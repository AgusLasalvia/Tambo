@using Dominio
<div class="back-button d-flex justify-content-center align-items-center position-absolute"
    style="top: 40px; left: 100px; background-color: #48bf78; width: 100px; height: 50px; border-radius: 10px;">
    <a href="~/Capataz/Home"
        class="d-flex justify-content-center align-items-center text-white text-decoration-none fw-bold"
        style="gap: 5px;">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 320 512" style="width: 20px; height: 20px;">
            <path fill="#ffffff"
                d="M41.4 233.4c-12.5 12.5-12.5 32.8 0 45.3l160 160c12.5 12.5 32.8 12.5 45.3 0s12.5-32.8 0-45.3L109.3 256 246.6 118.6c12.5-12.5 12.5-32.8 0-45.3s-32.8-12.5-45.3 0l-160 160z" />
        </svg>
        Volver
    </a>
</div>
<h1>Filtrar animales segun peso</h1>
using Dominio;
#line default
m action="~/Animal/ListaAnimalesPorPeso" method="get">
<label for="">Tipo de animal</label>
<select class="form-control" name="tipoAnimal">
    <option value="Ovino">Ovino</option>
    <option value="Bovino">Bovino</option>
</select>
<label for="">Peso</label>
<input class="form-control " type="number" name="peso">
<input type="submit" class="btn btn-primary" value="Buscar">
</form>

@if (ViewBag.Animales == null || ViewBag.Animales.Count == 0)
{
    <p class="alert alert-danger">No se encontraron animales</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Tipo de animal</th>
                <th>Peso Actual</th>
                <th>Sexo</th>
                <th>Posible ganancia</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Animal a in ViewBag.Animales)
            {
                <tr>
                    <td>@a.Id</td>
                    <td>@a.GetTipo()</td>
                    <td>@a.PesoActual</td>
                    <td>@a.Genero</td>
                    <td>@a.CalcularGanancia()</td>
                </tr>
            }
        </tbody>
    </table>
}

<style>
    h1 {
        margin-top: 100px;
    }
</style>