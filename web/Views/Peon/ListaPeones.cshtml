<div class="back-button d-flex justify-content-center align-items-center position-absolute"
    style="top: 40px; left: 100px; background-color: #48bf78; width: 100px; height: 50px; border-radius: 10px;">
    <a href="~/Capataz/Home"
        class="d-flex justify-content-center align-items-center text-white text-decoration-none fw-bold"
        style="gap: 5px;">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 320 512" style="width: 20px; height: 20px;">
            <path fill="#ffffff"
                d="M41.4 233.4c-12.5 12.5-12.5 32.8 0 45.3l160 160c12.5 12.5 32.8 12.5 45.3 0s12.5-32.8 0-45.3L109.3 256 246.6 118.6c12.5-12.5 12.5-32.8 0-45.3s-32.8-12.5-45.3 0l-160 160z" />
        </svg>
        Volver
    </a>
</div>
<h1>Lista de Peones</h1>
@if (ViewBag.Listado == null || ViewBag.Listado.Count == 0)
{
    <p class="alert alert-danger">No hay peones registrados</p>

}
else
{

    @if (ViewBag.Exito != null)
    {
        <div class="alert alert-success">@ViewBag.Exito</div>
    }
    else if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">@ViewBag.Error</div>
    }
<table class="table table-striped">
    <thead>
        <tr>
            <th>Nombre Completo</th>
            <th>Email</th>
            <th>Fecha de Ingreso</th>
            <th>Es residente</th>
            <th>Acciones</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (Peon u in ViewBag.Listado)
        {
            <tr>
                <td>@u.Nombre</td>
                <td>@u.Email</td>
                <td>@u.FechaIngreso.ToString("dd/MM/yyyy")</td>
                <td>@u.Reside</td>
                    <td><a class="btn btn-primary" href="~/Peon/PeonEspecifico?email=@u.Email">Detalles</a></td>
                    <td><a class="btn btn-primary" href="~/tarea/AsignarTarea/@u.Email">Asignar Tarea</a></td>
            </tr>
        }
    </tbody>
</table>
}

<style>
    h1 {
        margin-top: 100px;
    }
</style>