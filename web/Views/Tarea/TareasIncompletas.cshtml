<h1>Tares por realizar</h1>
@if (ViewBag.Exito != null)
{
	<div class="alert alert-success">
	@ViewBag.Exito
</div>
}

@if (ViewBag.Error != null)
{
	<div class="alert alert-success">
	@ViewBag.Error
</div>
}
<table class="table table-striped">
	<thead>
		<tr>
			<th>ID</th>
			<th>Descripci√≥n</th>
			<th>Fecha de apertura</th>
			<th>Fecha de cierre</th>
			<th>Comentario</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (Tarea u in ViewBag.ListaTareasSinTerminar)
		{
			<tr>
				<td>@u.Id</td>
				<td>@u.Descripcion</td>
				<td>@u.FechaPactada.ToString("dd/MM/yyyy")</td>
				<td>@u.FechaCierre.ToString("dd/MM/yyyy")</td>
				<td class="d-flex">
					<form action="~/tarea/CambioEstado" method="get">
						<input type="text" name="id" value="@u.Id" hidden>
						<input type="text" placeholder="Comentario" name="comentario" required>
						<input style="margin-left: 20px;" type="submit" value="Confirmar" class="btn btn-primary">
					</form>
				</td>

			</tr>
		}
	</tbody>
</table>

<style>
	h1 {
		margin-top: 100px;
	}
</style>