@*--------------- HTLM TEMPALTE DEL LOGIN ---------------*@

<section class="d-flex flex-column justify-content-center align-items-center text-center">
    <div>
        <article>
            <h2>Iniciar sesi√≥n</h2>
            <form action="~/Usuario/BuscarUsuario" method="post">
                <div> <input class="form-control " type="text" placeholder="Email" name="email" required /> </div>
                <div> <input class="form-control " type="password" placeholder="Password" name="password" required>
                </div> <br>
                @{
                    if (ViewBag.Error != null)
                    {
                        <p class="alert alert-danger">@ViewBag.Error</p>
                    }
                    if (ViewBag.Exito != null)
                    {
                        <p class="alert alert-success">@ViewBag.Exito</p>
                    }
                }

                <input type="submit" class="btn btn-primary" value="Ingresar">
            </form>
            <a href="~/Usuario/Registro">Registrar usuario</a>
        </article>

    </div>
</section>


